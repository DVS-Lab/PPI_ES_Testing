#!/bin/bash


NCORES=28
#for LIST in "Social_Act 2" "Social_PPI 7" "Social_nPPI_DMN 7" "Social_nPPI_ECN 7" "Emotion_Act 2" "Emotion_PPI 5" "WM_Act 2" "WM_PPI 5; do
for LIST in "Social_PPI 7"; do

  set -- $LIST
  TYPE=$1
  NCOPES=$2

  for COPENUM in `seq $NCOPES`; do
    echo $TYPE $COPENUM
    #Manages the number of jobs and cores
    while [ $(ps -ef | grep -v grep | grep L3.sh | wc -l) -ge $NCORES ]; do
        sleep 1m
    done
    bash L3.sh $TYPE $COPENUM &
  done
done
